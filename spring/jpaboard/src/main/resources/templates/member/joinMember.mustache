<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<!-- Bootstrap CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	<title>joinMember</title>
</head>
<body class="bg-light">

	{{>layouts/header}}

	<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
		<div class="card p-4 shadow" style="width: 100%; max-width: 450px;">
			<h3 class="text-center mb-4">회원가입</h3>

			{{#msg}}
				{{#msgType}}
					<div class="alert alert-{{msgType}} text-center">{{msg}}</div>
				{{/msgType}}
				{{^msgType}}
					<div class="alert alert-warning text-center">{{msg}}</div>
				{{/msgType}}
			{{/msg}}

			<form method="post" action="/member/joinMember">
				<div class="mb-3">
					<label for="memberId" class="form-label">아이디</label>
					<input type="text" name="memberId" id="memberId" class="form-control">
				</div>
				<div class="mb-3">
					<label for="memberPw" class="form-label">비밀번호</label>
					<input type="password" name="memberPw" id="memberPw" class="form-control">
				</div>
				<button type="submit" class="btn btn-primary w-100">회원가입</button>
			</form>
		</div>
	</div>

	{{>layouts/footer}}

</body>
</html>