<html>
<head>
	<meta charset="UTF-8">
	<title>boardOne</title>
	<!-- Bootstrap CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
	{{>layouts/header}}
	
	{{#msg}}
		<div>{{msg}}</div>
	{{/msg}}
	
		<table class="table">
		    <thead>
		    <tr>
		        <th scope="col">Id</th>
		        <th scope="col">Title</th>
		        <th scope="col">Content</th>
		    </tr>
		    </thead>
		    <tbody>
		    {{#board}}
		    <tr>
		        <th>{{boardNo}}</th>
		        <td>{{boardTitle}}</td>
		        <td>{{boardContent}}</td>
		    </tr>
		    {{/board}}
		    </tbody>
		</table>
		
		<a href="/board/modifyBoard?boardNo={{board.boardNo}}" class="btn btn-primary">modify</a>
		<a href="/board/delete?boardNo={{board.boardNo}}" class="btn btn-danger">Delete</a>
		<a href="/board/boardList">Go to Board List</a>
	{{>layouts/footer}}
</body>
</html>